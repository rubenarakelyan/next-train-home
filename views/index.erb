<div class="row">
  <div class="col-sm">
    <form action="/departures" method="get">
      <div class="form-group">
        <label for="from-crs">From</label>
        <select class="form-control" id="from-crs" name="from_crs">
          <% stations.each do |station| %>
          <option value="<%= station[:crs] %>"><%= station[:name] %></option>
          <% end %>
        </select>
      </div>
      <div class="form-group">
        <label for="to-crs">To</label>
        <select class="form-control" id="to-crs" name="to_crs">
          <% stations.each do |station| %>
          <option value="<%= station[:crs] %>"><%= station[:name] %></option>
          <% end %>
        </select>
      </div>
      <button type="submit" class="btn btn-primary">Go</button>
    </form>
  </div>
</div>
